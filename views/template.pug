doctype html
html
  head
    meta(charset='UTF-8')
    title Yammy Map!!
    script(src="https://code.jquery.com/jquery-3.2.1.min.js")
    script(src="https://openlayers.org/en/v4.1.1/build/ol.js" type="text/javascript")
    script(src="https://cdn.polyfill.io/v2/polyfill.min.js?features=requestAnimationFrame,Element.prototype.classList,URL")
    link(rel="stylesheet" href="https://openlayers.org/en/v4.1.1/css/ol.css" type="text/css")
    link(rel="stylesheet" type="text/css" href="/css/template.css")
  body
    #map
    #info(style="display: none;")
    label(for="track")
      div track position
      input#track(type="checkbox")
    p
      div position accuracy :
        code#accuracy &nbsp;&nbsp;
      div altitude :
        code#altitude &nbsp;&nbsp;
      div altitude accuracy :
        code#altitudeAccuracy &nbsp;&nbsp;
      div heading :
        code#heading &nbsp;&nbsp;
      div speed
        code#speed

    script(type='text/javascript', src='/js/template.js')
